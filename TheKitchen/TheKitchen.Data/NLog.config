<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target xsi:type="File"
            name="CreateDatabaseLog"
            fileName="${basedir}/TheKitchen.Data.Logs/CreateDatabaseLog.log"
            createDirs="true"
            layout="${longdate} | ${level} | ${message} ${exception:format=ToString}" />
    <target xsi:type="File"
            name="KitchenRepository"
            fileName="${basedir}/TheKitchen.Data.Logs/Repos/KitchenRepository.log"
            createDirs="true"
            layout="${longdate} | ${level} | ${message} ${exception:format=ToString}" />
  </targets>
  <rules>
    <logger name="TheKitchen.Data.Repos.KitchenRepository*" minlevel="Info" final="true" writeTo="KitchenRepository" />
    <logger name="TheKitchen.Data.*" minlevel="Info" writeTo="CreateDatabaseLog" />
  </rules>
</nlog>
